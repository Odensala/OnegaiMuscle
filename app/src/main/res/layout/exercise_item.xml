<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_200">

    <TextView
        android:id="@+id/textview_exercise_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textview_exercise_one_details"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Bench Press" />

    <TextView
        android:id="@+id/textview_exercise_one_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@id/textview_exercise_one_details"
        app:layout_constraintStart_toEndOf="@id/textview_exercise_one"
        app:layout_constraintTop_toTopOf="@+id/textview_exercise_one"
        tools:text="69kg" />

    <TextView
        android:id="@+id/textview_exercise_one_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_exercise_one"
        tools:text="First set 30kg, second set 60kg" />

</androidx.constraintlayout.widget.ConstraintLayout>
